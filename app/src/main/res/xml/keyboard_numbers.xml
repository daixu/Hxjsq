<?xml version="1.0" encoding="utf-8"?><!--根布局设置键盘整体的每个key之间的间隙和键的宽度和高度-->
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="1.5%p"
    android:keyWidth="23.15%p"
    android:keyHeight="7.5%p"
    android:verticalGap="1%p">

    <!--类似与内边距属性-->
    <Row android:keyHeight="0%p" />

    <Row>
        <Key
            android:codes="49"
            android:keyIcon="@drawable/icon_1" />
        <Key
            android:codes="50"
            android:keyIcon="@drawable/icon_2" />
        <Key
            android:codes="51"
            android:keyIcon="@drawable/icon_3" />
        <!--由于这个key的高度和其他key的高度不一样，所以这里需要重写这个属性-->
        <Key
            android:codes="-3"
            android:keyIcon="@drawable/icon_hide" />
        <!--类似与内边距属性-->
        <Key
            android:codes="-9999"
            android:keyWidth="0%p" />
    </Row>
    <Row>
        <Key
            android:codes="52"
            android:keyIcon="@drawable/icon_4" />
        <Key
            android:codes="53"
            android:keyIcon="@drawable/icon_5" />
        <Key
            android:codes="54"
            android:keyIcon="@drawable/icon_6" />

        <!--由于这个key的高度和其他key的高度不一样，所以这里需要重写这个属性-->
        <Key
            android:codes="-5"
            android:isRepeatable="true"
            android:keyIcon="@drawable/icon_del" />
    </Row>
    <Row>
        <Key
            android:codes="55"
            android:keyIcon="@drawable/icon_7" />
        <Key
            android:codes="56"
            android:keyIcon="@drawable/icon_8" />
        <Key
            android:codes="57"
            android:keyIcon="@drawable/icon_9" />
        <!--由于这个key的高度和其他key的高度不一样，所以这里需要重写这个属性-->
        <Key
            android:codes="-4"
            android:keyIcon="@drawable/icon_confirm" />
    </Row>

    <Row>
        <!--这里从新定于键的宽度-->
        <Key
            android:codes="-2"
            android:isModifier="true"
            android:isRepeatable="false"
            android:keyIcon="@drawable/icon_plus" />
        <Key
            android:codes="48"
            android:keyIcon="@drawable/icon_0" />
        <!--这里从新定于键的宽度-->
        <Key
            android:codes="45"
            android:keyIcon="@drawable/icon_less" />
        <Key
            android:codes="46"
            android:keyIcon="@drawable/icon_point" />
    </Row>
    <!--下边的内边距-->
    <Row android:keyHeight="0%p" />
</Keyboard>